{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "strict": true,
    "moduleResolution": "NodeNext",
    "module": "CommonJS",
    "target": "ESNext",
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "declarationMap": true
  },
  "exclude": [
    "node_modules"
  ]
}