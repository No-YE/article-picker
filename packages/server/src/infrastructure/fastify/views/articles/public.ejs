<article hx-boost="true" class="flex flex-col mt-4 space-y-4">
  <% for (const article of articles.concat(articles).concat(articles)) { %>
    <a href="/articles/<%= article.id %>" class="text-gray-700 no-underline">
      <div class="flex flex-col bg-white h-48 px-16 py-8 cursor-pointer hover:bg-slate-100">
        <h2 class="m-0 mb-2">
          <%= article.title %>
        </h2>
        <div class="flex justify-between space-x-4 h-40">
          <div class="flex flex-col justify-between">
            <div class="leading-6 line-clamp-5">
              <%= article.description %>
            </div>
            <div>
              Registration time: <%= new Intl.DateTimeFormat('ko', { dateStyle: 'medium', timeStyle: 'medium' }).format(article.createdAt) %>
            </div>
          </div>
          <img src="<%= article.imageUri %>" class="object-cover w-80">
        </div>
      </div>
    </a>
  <% } %>
</article>
