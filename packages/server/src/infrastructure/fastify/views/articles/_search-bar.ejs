<input class="h-10 sm:h-12 text-sm sm:text-base px-16 rounded border border-solid border-gray-300 focus:border-blue-600"
  type="search" 
  name="title"
  value="<%= locals.title %>"
  placeholder="Search Article Title..." 
  hx-get="<%= hxGet %>" 
  hx-push-url="true"
  hx-params="*"
  hx-trigger="keyup changed delay:300ms, search" 
  hx-target="<%= hxTarget %>">
