<article class="flex flex-col space-y-3">
  <%- include('_search-bar', { hxGet: '/articles/random', hxTarget: '#search-results', showIncludeRead: true }) -%>
  
  <div id="search-results">
    <%- include('_articles') -%>

    <div class="flex justify-center w-full mt-2">
      <button hx-get="/articles/random?title=<%= locals.title ?? '' %>&includeRead=<%= locals.includeRead ?? '' %>"
              hx-target="#search-results"
              class="text-base">
        Refresh
      </button>
    </div>
  </div>
</article>
