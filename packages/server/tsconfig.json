{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "types": [
      "node",
      "vite/client"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "plugins": [
      {
        "transform": "autoinjection/lib/transform"
      }
    ]
  },
  "exclude": [
    "dist"
  ]
}