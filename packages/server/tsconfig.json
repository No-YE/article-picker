{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDirs": [
      "./src",
      "./spec"
    ],
    "baseUrl": ".",
    "types": [
      "node",
      "vite/client"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "plugins": [
      {
        "transform": "autoinjection/lib/transform"
      }
    ]
  },
  "exclude": [
    "dist",
    "coverage",
    "vite.config.ts",
    "vitest.config.ts"
  ]
}